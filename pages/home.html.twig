            <article class="featured__card">
                <div class="featured__card_img">
                    <img src="{{ property.img_url }}" alt="{{ property.name }}" width="264" height="210">
                </div>
                <h3>{{ property.name }}</h3>
                <p class="featured__card_text">{{ property.description }}</p>
                <div class="featured__card_notes">
