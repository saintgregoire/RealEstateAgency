                    <th scope="col">Answered At</th>
                </tr>
                </thead>
                <tbody>
                {% for lead in allPropertiesLeads %}
                    <tr>
                        <th scope="row">{{ lead.getId()|e }}</th>
                        <td>{{ lead.getFirstName()|e }}</td>
